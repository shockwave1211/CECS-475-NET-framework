@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/smash 1.jpg" alt="Smash Banner" class="img-responsive image" />
            <div class="carousel-caption" role="option">
                <p>
                    Super Smash Bros. Ultimate is Now Out
                    <a asp-area="" asp-controller="Forum" asp-action="Index">
                        Join the Discussion
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/smash 2.png" alt="Buy Smash Bros." class="img-responsive image" />
            <div class="carousel-caption" role="option">
                <p>
                    Official Webpage for Smash Bros. 
                    <a class="btn btn-default" href="https://www.smashbros.com/en_US/">
                        View
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/smash 3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    View Tier Lists from pros, users, and more!
                    <a class="btn btn-default" href="https://ssbworld.com/create/tier-list/ultimate/">
                        Create a Tier List!
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

